
@{
    ViewData["Title"] = "Edit Product";
}

@model ProductViewModel

<div class="container">

<div class="card">
    <div class="card-header bg-primary bn-gradient text-white text-center">
        <h1 class="card-title">Edit Product</h1>
    </div>
    <div class="card-body">
        <form asp-controller="Product" asp-action="Edit" method="post">
            <input type="hidden" name="_method" value="put" />
            <input type="hidden" asp-for="Product.Id" />
            <div class="" asp-validation-summary="All"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Product.Title"></label>
                            <input type="text" asp-for="Product.Title" class="form-control" placeholder="Insert the category name..." required />
                            <span asp-validation-for="Product.Title"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Product.Description"></label>
                            <input type="text" asp-for="Product.Description" class="form-control" placeholder="Insert the category name..." required />
                            <span asp-validation-for="Product.Description"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Product.ISBN"></label>
                            <input type="text" asp-for="Product.ISBN" class="form-control" placeholder="Insert the category name..." required />
                            <span asp-validation-for="Product.ISBN"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Product.Author"></label>
                            <input type="text" asp-for="Product.Author" class="form-control" placeholder="Insert the category name..." required />
                            <span asp-validation-for="Product.Author"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Product.ListPrice"></label>
                            <input type="number" asp-for="Product.ListPrice" class="form-control" placeholder="Insert the category name..." required />
                            <span asp-validation-for="Product.ListPrice"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Product.Price"></label>
                            <input type="number" asp-for="Product.Price" class="form-control" placeholder="Insert the category name..." required />
                            <span asp-validation-for="Product.Price"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Product.Price50"></label>
                            <input type="number" asp-for="Product.Price50" class="form-control" placeholder="Insert the category name..." required />
                            <span asp-validation-for="Product.Price50"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Product.Price100"></label>
                            <input type="number" asp-for="Product.Price100" class="form-control" placeholder="Insert the category name..." required />
                            <span asp-validation-for="Product.Price100"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Product.CategoryId"></label>
                            <select asp-for="Product.CategoryId" class="form-control" asp-items="@Model.CategoryList" placeholder="Insert the category name..." required >
                                <option value="">Select a category</option>
                            </select>
                            <span asp-validation-for="Product.CategoryId"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <button type="submit" class="btn w-full btn-primary">Save</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Product" asp-action="Index" class="btn w-full btn-outline-secondary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}