@{
    ViewData["Title"] = "List Category";
}

@model List<Category>

<div class="container">

    <div class="row">
        <div class="col-md-6">
            <h1>Category</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-area="" asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill mr-1"></i> Add
            </a>
        </div>
    </div>


    <table class="table table-responsive table-stripped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-100 btn-group">
                            <a asp-area="" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" method="post">
                                <button class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
